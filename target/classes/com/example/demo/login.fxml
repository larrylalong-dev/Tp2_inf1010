<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@modern-style.css" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #f5f5f5;">
         <children>
            <!-- Titre principal simple -->
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="Annuaire INF1010" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #333333;">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <Label text="Connexion" style="-fx-font-size: 18px; -fx-text-fill: #666666;">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>

            <!-- Formulaire de connexion simple -->
            <VBox spacing="20.0" alignment="CENTER" maxWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 8px; -fx-padding: 40px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <!-- Champ nom d'utilisateur -->
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Nom d'utilisateur" style="-fx-text-fill: #555555; -fx-font-size: 14px; -fx-font-weight: 500;" />
                        <TextField fx:id="usernameField" promptText="Entrez votre nom d'utilisateur" style="-fx-background-color: #f8f8f8; -fx-border-color: #dddddd; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-background-radius: 4px; -fx-padding: 12px; -fx-font-size: 14px;" />
                     </children>
                  </VBox>

                  <!-- Champ mot de passe -->
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Mot de passe" style="-fx-text-fill: #555555; -fx-font-size: 14px; -fx-font-weight: 500;" />
                        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" style="-fx-background-color: #f8f8f8; -fx-border-color: #dddddd; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-background-radius: 4px; -fx-padding: 12px; -fx-font-size: 14px;" />
                     </children>
                  </VBox>

                  <!-- Message d'erreur -->
                  <Label fx:id="errorLabel" text="" style="-fx-text-fill: #d32f2f; -fx-font-size: 13px;" visible="false" />

                  <!-- Boutons -->
                  <VBox spacing="12.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onLoginClicked" text="Se connecter" prefWidth="320.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 500; -fx-background-radius: 4px; -fx-padding: 12px; -fx-cursor: hand;" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
